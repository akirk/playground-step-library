{
  "name": "playground-step-library",
  "version": "1.2.1",
  "description": "A compiler that transforms WordPress Playground blueprints with custom steps into blueprints with native steps",
  "type": "module",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "bin": {
    "playground-compile": "bin/cli.js"
  },
  "scripts": {
    "build:lib": "tsc && node build.js",
    "build:ui": "vite build",
    "build": "npm run build:lib && npm run docs:generate && npm run build:ui",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "schema:generate": "node bin/generate-schema.js",
    "docs:generate": "node bin/generate-schema.js && node bin/generate-docs.js",
    "prepare": "npm run build:lib && npm run docs:generate",
    "dev": "tsc --watch & vite"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "@vitest/coverage-v8": "^3.2.4",
    "@wp-playground/blueprints": "^3.0.21",
    "ajv": "^8.17.1",
    "happy-dom": "^20.0.10",
    "typescript": "^5.0.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "wordpress",
    "playground",
    "blueprint",
    "compiler",
    "steps"
  ],
  "author": "Alex Kirk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akirk/playground-step-library.git"
  },
  "files": [
    "lib/",
    "bin/",
    "README.md",
    "step-library-schema.json"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
