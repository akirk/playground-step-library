{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": ".",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*", "steps/**/*", "src/cli/**/*"],
  "exclude": ["node_modules", "lib", "test", "examples", "**/*.spec.ts", "**/*.test.ts"]
}